<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BtnStyleNormal" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/rounded_btn_main</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BtnStyleAtentive" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/rounded_btn_green</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="BtnStyleComplete" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/rounded_btn_complete</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/white</item>
    </style>

</resources>
